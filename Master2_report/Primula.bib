keywords = {Dispersal,Glacial refugia,High elevation,Mountains,Phylogenetic uncertainty,Speciation},
number = {January},
pages = {31--40},
title = {{Reprint of: Disentangling drivers of plant endemism and diversification in the European Alps - a phylogenetic and spatially explicit approach}},
