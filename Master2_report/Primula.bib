journal = {Systematic Biology},
keywords = {Approximate Bayesian computation,Late Quaternary glacial cycles,Reduced Representation Library,climate change,hindcasting,paleoclimate,species distribution models},
number = {5},
pages = {715--736},
title = {{How do cold-adapted plants respond to climatic cycles? Interglacial expansion explains current distribution and genomic diversity in Primula farinosa L.}},
