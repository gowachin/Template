issn = {10958290},
journal = {Annals of Botany},
keywords = {Ecological niche,Minority-cytotype exclusion,Pollinator shift,Polyploidy,Primula allionii Loisel,Primula marginata Curtis},
number = {1},
pages = {81--93},
title = {{Do floral and niche shifts favour the establishment and persistence of newly arisen polyploids? A case study in an Alpine primrose}},
