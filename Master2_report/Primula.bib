file = {:home/maxime/Documents/Mendeley Desktop/Schorr et al.{\_}2012{\_}Integrating species distribution models (SDMs) and phylogeography for two species of alpine primula.pdf:pdf},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Aflp,Niche modeling,Palaeodistribution,Quaternary},
